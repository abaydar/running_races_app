Races#new
<h1>Add a Race:</h1>
<%= form_with model: @race do |f| %>

<% if @race.errors.any? %>
    <h3>Please note errors below:</h3>
    <ul>
    <% @race.errors.full_messages.each do |m| %>
        <li><%= m %>
    <% end %>
    </ul>
<% end %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :distance %>
    <%= f.text_field :distance %><br>

    <%= f.label :location %>
    <%= f.text_field :location %><br>

    <%= f.label :date %>
    <%= f.date_field :date %><br>

    <%= f.label :age_group %>
    <%= f.text_field :age_group %><br>

    <% if @user %>
        <%= f.hidden_field :creator_id, value: @user.id %>
    <% end %>

    <%= f.submit 'Create Race' %>
<% end %>